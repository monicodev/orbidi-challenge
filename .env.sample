# --- API CONFIGURATION ---
PROJECT_NAME="Orbidi API"
VERSION="1.0.0"
DEBUG=False

# --- SECURITY ---
SECRET_KEY="your_super_secret_jwt_private_key_change_me"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 1 week

# --- DATABASE (POSTGRESQL) ---
POSTGRES_USER=orbidi_admin
POSTGRES_PASSWORD=secure_password_123
POSTGRES_DB=orbidi_platform

# Used by the FastAPI application (asyncpg driver)
# Note: 'db' is the service name defined in docker-compose.yml
DATABASE_URL="postgresql+asyncpg://orbidi_admin:secure_password_123@db:5432/orbidi_platform"

# --- CACHE (REDIS) ---
REDIS_URL="redis://redis:6379/0"

# --- SCALABILITY SETTINGS ---
# Number of Uvicorn workers
WORKERS_COUNT=4